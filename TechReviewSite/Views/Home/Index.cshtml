@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Future-Past ComTech Reviews</h1>
    <p class="lead">Evaluating future communication technology from the past - in the present!</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<!--CAROUSEL w/ 3 reviews -------------------------------------------------------------------------->

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/babelfishj.jpg" alt="Babel fish">
            <div class="carousel-caption">
                <h3>Don't Panic!</h3>
                <p>Ford Prefect, intergalactic traveler </p>
            </div>
        </div>

        <div class="item">
            
            <img src="~/Images/kirkcommunicator.jpg" alt="Captain Kirk" />

            <div class="carousel-caption">
                <h3>Beam me up, Scotty!</h3>
                <p>James T. Kirk, Captain</p>
            </div>
        </div>

        <div class="item">
          
            <img src="~/Images/Maxand99promo.jpg" class="img-thumbnail" alt="Maxwell Smart" height="300"/>
            <div class="carousel-caption">
                <h3>Are you thinking what I'm thinking?</h3>
                <p>Maxwell Smart, Agent</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

